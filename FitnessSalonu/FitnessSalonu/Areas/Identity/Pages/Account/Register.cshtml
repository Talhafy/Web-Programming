@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    .register-card {
        border-radius: 20px;
        overflow: hidden;
        border: none;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }

    .register-header {
        background-color: #ffc107; 
        color: #000;
        padding: 30px;
        text-align: center;
        position: relative;
    }

    .btn-black {
        background-color: #000;
        color: #fff;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-black:hover {
            background-color: #333;
            color: #ffc107;
            transform: translateY(-2px);
        }

    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
</style>

<div class="container d-flex align-items-center justify-content-center py-5" style="min-height: 85vh;">
    <div class="card register-card" style="max-width: 500px; width: 100%;">

        <div class="register-header">
            <h2 class="fw-bold text-uppercase mb-1">ARAMIZA KATIL</h2>
            <p class="mb-0 fw-bold opacity-75">Değişime bugün başla!</p>
            <div style="position: absolute; bottom: -10px; left: 50%; transform: translateX(-50%); width: 0; height: 0; border-left: 10px solid transparent; border-right: 10px solid transparent; border-top: 10px solid #ffc107;"></div>
        </div>

        <div class="card-body p-5 bg-white">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="text-muted"><i class="fas fa-envelope me-2"></i>E-Posta Adresi</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="text-muted"><i class="fas fa-lock me-2"></i>Şifre Belirle</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="text-muted"><i class="fas fa-lock me-2"></i>Şifreyi Onayla</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button id="registerSubmit" type="submit" class="btn btn-black btn-lg rounded-3 py-3">
                        ÜYE OL VE BAŞLA <i class="fas fa-user-plus ms-2"></i>
                    </button>
                </div>

                <div class="text-center mt-4 border-top pt-3">
                    <p class="text-muted small">
                        Zaten hesabın var mı?
                        <a asp-area="Identity" asp-page="/Account/Login" class="text-dark fw-bold text-decoration-none">Giriş Yap</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}