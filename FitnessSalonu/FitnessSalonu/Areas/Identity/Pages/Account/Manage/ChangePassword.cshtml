@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>

    <div class="col-md-9">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-black text-white p-4 border-bottom border-warning border-4">
                <h4 class="mb-0 fw-bold"><i class="fas fa-lock text-warning me-2"></i> Şifre Güvenliği</h4>
            </div>
            <div class="card-body p-5">
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="change-password-form" method="post">

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Eski Şifre" />
                        <label asp-for="Input.OldPassword">Mevcut Şifre</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni Şifre" />
                        <label asp-for="Input.NewPassword">Yeni Şifre</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Tekrar" />
                        <label asp-for="Input.ConfirmPassword">Yeni Şifre Tekrar</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg rounded-pill fw-bold px-5 shadow hover-effect">
                        <i class="fas fa-sync-alt me-2"></i> ŞİFREYİ GÜNCELLE
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}