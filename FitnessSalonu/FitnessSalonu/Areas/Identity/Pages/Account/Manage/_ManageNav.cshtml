@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<style>
    /* Menü Tasarımı */
    .nav-pills .nav-link {
        color: #6c757d;
        font-weight: 600;
        border-radius: 50px;
        padding: 12px 25px;
        margin-bottom: 8px;
        transition: all 0.3s;
    }
    .nav-pills .nav-link:hover {
        background-color: #f0f0f0;
        color: #000;
    }
    .nav-pills .nav-link.active {
        background-color: #ffc107 !important; /* Gold */
        color: #000 !important;
        box-shadow: 0 4px 10px rgba(255, 193, 7, 0.4);
    }
    .nav-pills .nav-link i {
        width: 25px;
        text-align: center;
    }
</style>

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="fas fa-user-circle"></i> Profil Bilgileri
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fas fa-key"></i> Şifre Değiştir
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            <i class="fas fa-trash-alt"></i> Hesap Ayarları / Sil
        </a>
    </li>
</ul>