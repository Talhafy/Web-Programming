<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PowerFit Gym</title>

    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;600;700&family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <style>
        body {
            background-color: #121212;
            color: #fff;
            font-family: 'Rubik', sans-serif;
        }

        h1, h2, h3, h4, h5 {
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
        }

        /* Navbar */
        .navbar-dark {
            background-color: #000 !important;
            border-bottom: 2px solid #ffc107;
        }

        .nav-link {
            color: rgba(255,255,255,0.8) !important;
            font-weight: 500;
        }

            .nav-link:hover, .nav-link.active {
                color: #ffc107 !important;
            }

        /* Renkler */
        .text-warning {
            color: #ffc107 !important;
        }

        .btn-warning {
            background-color: #ffc107;
            border: none;
            color: #000;
            font-weight: bold;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                transform: translateY(-2px);
            }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #000;
        }

        /* Kartlar */
        .card {
            background-color: #1e1e1e;
            border: 1px solid #333;
        }

        /* Footer */
        footer {
            background-color: #000;
            border-top: 3px solid #ffc107;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark py-3 sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fas fa-dumbbell text-warning fa-2x me-2"></i>
                <span class="fs-2 fw-bold" style="font-family: 'Oswald'; letter-spacing: 2px;">POWER<span class="text-warning">FIT</span></span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link mx-2" href="/">ANA SAYFA</a></li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning mx-2" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-shield-alt me-1"></i> YÖNETİM
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark shadow-lg border-warning">
                                <li><a class="dropdown-item py-2" href="/Appointments/AdminIndex"><i class="fas fa-calendar-check me-2 text-warning"></i>Randevular</a></li>
                                <li><a class="dropdown-item py-2" href="/Trainers"><i class="fas fa-users-cog me-2 text-warning"></i>Eğitmenler</a></li>
                                <li><a class="dropdown-item py-2" href="/GymServices"><i class="fas fa-dumbbell me-2 text-warning"></i>Hizmetler</a></li>
                                <li><a class="dropdown-item py-2" href="/Gyms"><i class="fas fa-building me-2 text-warning"></i>Salonlar</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link mx-2" href="/AI"><i class="fas fa-robot me-1 text-warning"></i>AI Koç</a></li>
                        <li class="nav-item"><a class="btn btn-warning rounded-pill px-4 mx-2" href="/Appointments/Create">Randevu Al</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link mx-2" href="/Appointments">Randevularım</a></li>
                        }
                    }
                </ul>
                <div class="ms-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="text-white py-5 mt-5">
        <div class="container text-center">
            <h2 class="text-warning mb-3" style="font-family: 'Oswald';">POWERFIT GYM</h2>
            <p class="mb-4 opacity-75">Sınırlarını zorlamak ve en iyi versiyonuna ulaşmak için doğru yerdesin.</p>
            <div class="d-flex justify-content-center gap-3 mb-4">
                <a href="#" class="btn btn-outline-warning btn-sm rounded-circle" style="width: 40px; height: 40px; display: grid; place-items: center;"><i class="fab fa-instagram"></i></a>
                <a href="#" class="btn btn-outline-warning btn-sm rounded-circle" style="width: 40px; height: 40px; display: grid; place-items: center;"><i class="fab fa-twitter"></i></a>
            </div>
            <p class="mb-0 opacity-50 small">&copy; 2025 PowerFit Gym. Tüm Hakları Saklıdır.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>