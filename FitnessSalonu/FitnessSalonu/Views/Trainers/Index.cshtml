@model IEnumerable<FitnessSalonu.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h5 class="text-warning text-uppercase ls-2 mb-2">Profesyonel Kadro</h5>
            <h1 class="display-5 fw-bold text-white text-uppercase" style="font-family: 'Oswald';">EĞİTMENLERİMİZ</h1>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm hover-scale">
                <i class="fas fa-plus me-2"></i> YENİ EĞİTMEN EKLE
            </a>
        }
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 wow fadeInUp">
                <div class="card bg-dark text-white border-0 shadow-lg h-100" style="border-bottom: 4px solid #ffc107 !important;">
                    <div class="card-body p-4 text-center">
                        <div class="btn-square rounded-circle bg-warning mx-auto mb-4" style="width: 70px; height: 70px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user-ninja fa-2x text-dark"></i>
                        </div>

                        <h3 class="fw-bold mb-2" style="font-family: 'Oswald';">@item.FullName</h3>

                        <p class="text-warning fw-bold mb-3">
                            @(item.GymService != null ? item.GymService.Name : "Atanmamış")
                        </p>

                        <div class="bg-black rounded p-3 mb-3">
                            <small class="text-secondary d-block text-uppercase">Çalışma Salonu</small>
                            <span class="fw-bold text-white">@(item.Gym != null ? item.Gym.Name : "-")</span>
                        </div>

                        <div class="text-secondary mb-4">
                            <i class="far fa-clock text-warning me-2"></i> @item.WorkingHours Saat / Gün
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex justify-content-center gap-2 border-top border-secondary pt-3">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm rounded-pill px-3">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill px-3">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>