@model FitnessSalonu.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg rounded-4">
                <div class="card-header bg-black border-bottom border-warning p-4">
                    <h3 class="fw-bold m-0 text-warning text-uppercase">Eğitmen Düzenle</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label text-warning fw-bold small">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control bg-secondary text-white border-0 py-3" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="WorkingHours" class="form-label text-warning fw-bold small">Çalışma Saati</label>
                            <input asp-for="WorkingHours" class="form-control bg-secondary text-white border-0 py-3" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="GymId" class="form-label text-warning fw-bold small">Salon</label>
                            <select asp-for="GymId" class="form-select bg-secondary text-white border-0 py-3" asp-items="ViewBag.GymId"></select>
                        </div>

                        <div class="mb-5">
                            <label asp-for="GymServiceId" class="form-label text-warning fw-bold small">Uzmanlık (Hizmet)</label>
                            <select asp-for="GymServiceId" class="form-select bg-secondary text-white border-0 py-3">
                                <option disabled selected>Lütfen tekrar oluşturunuz (Bu özellik değişti)</option>
                            </select>
                            <small class="text-muted">Not: Salon değişirse hizmeti tekrar seçmeniz gerekebilir.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill text-dark">KAYDET</button>
                            <a asp-action="Index" class="btn btn-outline-light rounded-pill">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>