@model FitnessSalonu.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4>📅 Yeni Randevu Oluştur</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label">Antrenör Seçiniz</label>
                            <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hizmet Seçiniz</label>
                            <select asp-for="GymServiceId" class="form-control" asp-items="ViewBag.GymServiceId"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tarih ve Saat</label>
                            <input asp-for="AppointmentDate" class="form-control" type="datetime-local"
                                   min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Randevuyu Onayla</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>