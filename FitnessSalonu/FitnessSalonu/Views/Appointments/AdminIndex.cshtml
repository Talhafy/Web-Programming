@model IEnumerable<FitnessSalonu.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi"; Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="mb-5">
        <h5 class="text-warning text-uppercase ls-2 mb-2">YÖNETİM PANELİ</h5>
        <h1 class="display-5 fw-bold text-white text-uppercase" style="font-family: 'Oswald';">RANDEVU <span class="text-warning">LİSTESİ</span></h1>
        <p class="text-secondary">Bekleyen randevuları buradan onaylayabilir veya reddedebilirsiniz.</p>
    </div>

    <div class="card bg-dark border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead class="bg-secondary text-white text-uppercase small">
                    <tr>
                        <th class="ps-4 py-3">Üye Bilgisi</th>
                        <th class="py-3">Hizmet / Eğitmen</th>
                        <th class="py-3">Tarih</th>
                        <th class="py-3 text-center">Durum</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">@item.User?.UserName</div>
                                <div class="small text-secondary">@item.User?.Email</div>
                            </td>
                            <td>
                                <div class="fw-bold text-warning">@item.GymService?.Name</div>
                                <div class="small text-white"><i class="fas fa-user-ninja me-1"></i> @item.Trainer?.FullName</div>
                            </td>
                            <td>
                                <div class="fw-bold fs-5">@item.AppointmentDate.ToString("dd.MM.yyyy")</div>
                                <div class="small text-secondary"><i class="far fa-clock me-1"></i> @item.AppointmentDate.ToString("HH:mm")</div>
                            </td>
                            <td class="text-center">
                                @if (item.Status == "Onaylandı")
                                {
                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i>ONAYLI</span>
                                }
                                else if (item.Status == "Reddedildi")
                                {

                                    <span class="badge bg-danger"><i class="fas fa-times me-1"></i>RED</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half me-1"></i>BEKLİYOR</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                @if (item.Status == "Beklemede")
                                {
                                    <a asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-status="Onaylandı" class="btn btn-success btn-sm rounded-pill fw-bold me-1">
                                        <i class="fas fa-check"></i>
                                    </a>
                                    <a asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-status="Reddedildi" class="btn btn-danger btn-sm rounded-pill fw-bold me-1">
                                        <i class="fas fa-times"></i>
                                    </a>
                                }
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm rounded-pill">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>