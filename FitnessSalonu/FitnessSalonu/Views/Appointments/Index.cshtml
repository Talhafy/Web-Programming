@model IEnumerable<FitnessSalonu.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-5 fw-bold text-white text-uppercase" style="font-family: 'Oswald';">
            <i class="fas fa-calendar-alt text-warning me-3"></i>RANDEVULARIM
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg fw-bold rounded-pill px-4 shadow-lg">
            <i class="fas fa-plus me-2"></i> Yeni Randevu Al
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-dark text-center py-5 border-warning border-2" role="alert">
            <i class="fas fa-calendar-times fa-3x text-warning mb-3"></i>
            <h3>Henüz randevunuz yok.</h3>
            <p>Hemen ilk antrenmanınızı planlayın!</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle rounded overflow-hidden">
                <thead class="bg-warning text-dark">
                    <tr>
                        <th class="py-3 ps-4">TARİH & SAAT</th>
                        <th class="py-3">HİZMET / SALON</th>
                        <th class="py-3">ANTRENÖR</th>
                        <th class="py-3 text-center">DURUM</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold fs-5">@item.AppointmentDate.ToString("dd.MM.yyyy")</div>
                                <div class="text-warning small">@item.AppointmentDate.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <div class="fw-bold text-white">@item.GymService?.Name</div>
                                <div class="text-secondary small mt-1">
                                    <i class="fas fa-building me-1"></i> @(item.GymService?.Gym?.Name ?? "Salon Bilgisi Yok")
                                </div>
                                <div class="text-secondary small" style="font-size: 0.75rem;">
                                    <i class="fas fa-map-marker-alt me-1"></i> @(item.GymService?.Gym?.Address ?? "")
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="btn-square rounded-circle bg-secondary me-2" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-user text-white small"></i>
                                    </div>
                                    @item.Trainer?.FullName
                                </div>
                            </td>
                            <td class="text-center">
                                @if (item.Status == "Onaylandı")
                                {
                                    <span class="badge bg-success rounded-pill px-3 py-2"><i class="fas fa-check me-1"></i>ONAYLANDI</span>
                                }
                                else if (item.Status == "Reddedildi")
                                {
                                    <span class="badge bg-danger rounded-pill px-3 py-2"><i class="fas fa-times me-1"></i>REDDEDİLDİ</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3 py-2"><i class="fas fa-clock me-1"></i>BEKLİYOR</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>