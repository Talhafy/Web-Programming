@model IEnumerable<FitnessSalonu.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📅 Randevularım</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni Randevu Al</a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tarih & Saat</th>
                <th>Antrenör</th>
                <th>Hizmet</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.Trainer?.FullName</td>
                    <td>@item.GymService?.Name</td>
                    <td>
                        <span class="badge bg-success">Onaylandı</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Henüz hiç randevunuz yok.</div>
    }
</div>