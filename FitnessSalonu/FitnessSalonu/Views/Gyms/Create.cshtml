@model FitnessSalonu.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg rounded-4">
                <div class="card-header bg-black border-bottom border-warning p-4">
                    <h3 class="fw-bold m-0 text-warning text-uppercase">YENİ SALON</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-warning fw-bold small">Salon Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-white border-0 py-3" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label text-warning fw-bold small">Adres</label>
                            <textarea asp-for="Address" class="form-control bg-secondary text-white border-0 py-3" rows="2"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="OpeningTime" class="form-label text-warning fw-bold small">Açılış Saati</label>
                                <input asp-for="OpeningTime" type="time" class="form-control bg-secondary text-white border-0 py-3" value="09:00" />
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="ClosingTime" class="form-label text-warning fw-bold small">Kapanış Saati</label>
                                <input asp-for="ClosingTime" type="time" class="form-control bg-secondary text-white border-0 py-3" value="22:00" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill text-dark">KAYDET</button>
                            <a asp-action="Index" class="btn btn-outline-light rounded-pill">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>