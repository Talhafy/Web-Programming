@model FitnessSalonu.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-black border-bottom border-warning p-4">
                    <h3 class="fw-bold m-0 text-warning text-uppercase"><i class="fas fa-building me-2"></i>Yeni Salon</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-warning fw-bold small text-uppercase ls-1">Salon Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-white border-0 py-3" placeholder="Örn: Merkez Şube" style="color: white !important;" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label text-warning fw-bold small text-uppercase ls-1">Adres</label>
                            <input asp-for="Address" class="form-control bg-secondary text-white border-0 py-3" placeholder="Örn: Serdivan AVM Yanı" style="color: white !important;" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-5">
                            <label asp-for="WorkingHours" class="form-label text-warning fw-bold small text-uppercase ls-1">Çalışma Süresi (Saat)</label>
                            <input asp-for="WorkingHours" class="form-control bg-secondary text-white border-0 py-3" placeholder="Örn: 12" style="color: white !important;" />
                            <span asp-validation-for="WorkingHours" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill text-dark">KAYDET</button>
                            <a asp-action="Index" class="btn btn-outline-light rounded-pill">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>