@model FitnessSalonu.Models.Gym

@{
    ViewData["Title"] = "Salon Detayı";
}

<div class="container py-5">
    <div class="card bg-dark text-white border-0 shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-black border-bottom border-warning p-4 text-center">
            <h3 class="fw-bold m-0 text-warning text-uppercase">SALON BİLGİLERİ</h3>
        </div>
        <div class="card-body p-5 text-center">
            <div class="btn-square rounded-circle bg-warning mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-building fa-3x text-dark"></i>
            </div>

            <h2 class="mb-4 fw-bold" style="font-family: 'Oswald';">@Model.Name</h2>

            <div class="bg-secondary bg-opacity-25 rounded p-3 mb-3 text-start">
                <small class="text-warning d-block text-uppercase ls-1 mb-1">Adres</small>
                <span class="fs-5"><i class="fas fa-map-marker-alt me-2"></i>@Model.Address</span>
            </div>

            <div class="bg-secondary bg-opacity-25 rounded p-3 mb-4 text-start">
                <small class="text-warning d-block text-uppercase ls-1 mb-1">Çalışma Saatleri</small>
                <span class="fs-5"><i class="far fa-clock me-2"></i>@Model.OpeningTime - @Model.ClosingTime</span>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning fw-bold rounded-pill px-4">DÜZENLE</a>
                <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4">LİSTEYE DÖN</a>
            </div>
        </div>
    </div>
</div>