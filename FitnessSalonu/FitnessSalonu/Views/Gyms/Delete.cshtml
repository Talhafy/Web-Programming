@model FitnessSalonu.Models.Gym

@{
    ViewData["Title"] = "Salonu Sil";
}

<div class="container py-5">
    <div class="card bg-dark text-white border-0 shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger border-0 p-4 text-center">
            <h3 class="fw-bold m-0 text-white text-uppercase"><i class="fas fa-exclamation-triangle me-2"></i>BU SALON SİLİNSİN Mİ?</h3>
        </div>
        <div class="card-body p-5 text-center">
            <h2 class="mb-3">@Model.Name</h2>

            <div class="alert alert-warning text-dark border-0 mb-4">
                <strong>Dikkat:</strong> Bu salonu silerseniz, buraya bağlı tüm eğitmenler ve hizmetler de etkilenebilir!
            </div>

            <div class="bg-secondary bg-opacity-25 rounded p-3 mb-3 text-start">
                <small class="text-warning d-block text-uppercase ls-1 mb-1">Adres</small>
                <p class="mb-0 text-white">@Model.Address</p>
            </div>

            <div class="bg-secondary bg-opacity-25 rounded p-3 mb-4 text-start">
                <small class="text-warning d-block text-uppercase ls-1 mb-1">Çalışma Saatleri</small>
                <p class="mb-0 text-white">@Model.OpeningTime - @Model.ClosingTime</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg fw-bold rounded-pill">EVET, SALONU SİL</button>
                    <a asp-action="Index" class="btn btn-outline-light rounded-pill">İPTAL</a>
                </div>
            </form>
        </div>
    </div>
</div>