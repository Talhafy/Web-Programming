@model FitnessSalonu.Models.GymService

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<div class="container py-5">
    <div class="card bg-dark text-white border-0 shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-black border-bottom border-warning p-4 text-center">
            <h3 class="fw-bold m-0 text-warning text-uppercase">HİZMET DETAYI</h3>
        </div>
        <div class="card-body p-5 text-center">
            <h2 class="mb-2 fw-bold display-5" style="font-family: 'Oswald';">@Model.Name</h2>
            <p class="text-secondary mb-4">@Model.Gym?.Name</p>

            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="bg-secondary bg-opacity-25 rounded p-3">
                        <small class="text-warning d-block text-uppercase ls-1">Süre</small>
                        <span class="fs-4 fw-bold">@Model.DurationMinutes Dk</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="bg-secondary bg-opacity-25 rounded p-3">
                        <small class="text-warning d-block text-uppercase ls-1">Ücret</small>
                        <span class="fs-4 fw-bold">@Model.Price ₺</span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning fw-bold rounded-pill px-4">DÜZENLE</a>
                <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4">LİSTEYE DÖN</a>
            </div>
        </div>
    </div>
</div>