@model FitnessSalonu.Models.GymService

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg rounded-4">
                <div class="card-header bg-black border-bottom border-warning p-4">
                    <h3 class="fw-bold m-0 text-warning text-uppercase">HİZMETİ DÜZENLE</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-warning fw-bold small text-uppercase">Hizmet Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-white border-0 py-3" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="DurationMinutes" class="form-label text-warning fw-bold small text-uppercase">Süre (Dk)</label>
                                <input asp-for="DurationMinutes" class="form-control bg-secondary text-white border-0 py-3" />
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label text-warning fw-bold small text-uppercase">Ücret (₺)</label>
                                <input asp-for="Price" class="form-control bg-secondary text-white border-0 py-3" />
                            </div>
                        </div>

                        <div class="mb-5">
                            <label asp-for="GymId" class="form-label text-warning fw-bold small text-uppercase">Bağlı Olduğu Salon</label>
                            <select asp-for="GymId" class="form-select bg-secondary text-white border-0 py-3" asp-items="ViewBag.GymId"></select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill text-dark hover-scale">KAYDET</button>
                            <a asp-action="Index" class="btn btn-outline-light rounded-pill">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>