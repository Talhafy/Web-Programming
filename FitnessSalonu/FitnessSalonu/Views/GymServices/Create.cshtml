@model FitnessSalonu.Models.GymService

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-black border-bottom border-warning p-4">
                    <h3 class="fw-bold m-0 text-warning text-uppercase"><i class="fas fa-tags me-2"></i>Yeni Hizmet</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-warning fw-bold small text-uppercase ls-1">Hizmet Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-white border-0 py-3" placeholder="Örn: Birebir Fitness" style="color: white !important;" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label text-warning fw-bold small text-uppercase ls-1">Süre (Dk)</label>
                                <input asp-for="DurationMinutes" class="form-control bg-secondary text-white border-0 py-3" placeholder="60" style="color: white !important;" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label text-warning fw-bold small text-uppercase ls-1">Ücret (₺)</label>
                                <input asp-for="Price" class="form-control bg-secondary text-white border-0 py-3" placeholder="500" style="color: white !important;" />
                            </div>
                        </div>

                        <div class="mb-5">
                            <label asp-for="GymId" class="form-label text-warning fw-bold small text-uppercase ls-1">Hangi Salonda?</label>
                            <select asp-for="GymId" class="form-select bg-secondary text-white border-0 py-3" asp-items="ViewBag.GymId" style="color: white !important;"></select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill text-dark">KAYDET</button>
                            <a asp-action="Index" class="btn btn-outline-light rounded-pill">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>