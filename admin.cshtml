<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fitness Center Admin Panel</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/Dashboard" class="nav-link">Dashboard</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Admin/Dashboard" class="brand-link">
                <span class="brand-text font-weight-light">Fitness Admin</span>
            </a>

            <div class="sidebar">

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column">

                        <li class="nav-item">
                            <a href="/Salon/Index" class="nav-link">
                                <i class="nav-icon fas fa-dumbbell"></i>
                                <p>Salon Yönetimi</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Hizmet/Index" class="nav-link">
                                <i class="nav-icon fas fa-list"></i>
                                <p>Hizmet Türleri</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Antrenor/Index" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>Antrenör Yönetimi</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Uye/Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Üyeler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Randevu/Index" class="nav-link">
                                <i class="nav-icon fas fa-calendar-alt"></i>
                                <p>Randevular</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Raporlama/Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>Raporlama (API)</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/AI/Index" class="nav-link">
                                <i class="nav-icon fas fa-robot"></i>
                                <p>AI Egzersiz Öneri</p>
                            </a>
                        </li>

                    </ul>
                </nav>

            </div>
        </aside>
        <!-- /.sidebar -->

        <!-- CONTENT AREA -->
        <div class="content-wrapper">
            <section class="content p-3">
                @RenderBody()
            </section>
        </div>

        <!-- FOOTER -->
        <footer class="main-footer text-center">
            <strong>Fitness Center Yönetim Sistemi © 2025</strong>
        </footer>

    </div>

    <!-- Scripts -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
</body>
</html>
